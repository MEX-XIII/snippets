{
	"Main Create": {
		"prefix": "main",
		"body": [
			"//VENDORS",
			"@import 'vendors/${1:}';",
			"",
			"//BASE",
			"@import 'base/${2:}';",
			"",
			"//HELPERS",
			"@import 'helpers/${3:}';",
			"",
			"//COMPONENTS",
			"@import 'components/${4:}';",
			"",
			"//LAYOUTS",
			"@import 'layouts/${5:}';",
			"",
			"//PAGES",
			"@import 'pages/${6:}';",
			""
		],
		"description": "Cria a base do main do sass"
	},

	"Reset CSS": {
		"prefix": "reset",
		"body": [ 
			"*{",
			"	padding: 0;",
			"	margin: 0;",
			" ",
			"	font-family: ${1:Fonte};",
			"}",
			" ",	
			"body {",
			"	overflow-x: hidden;",
			"}",
			" ",
			".pointer {cursor: pointer;}",
			".both {clear: both;}",
			"textarea {resize: none;}",
			" ",
			"ul {",
			"	list-style: none;",
			"	margin: 0;",
			"}",
			" ",
			"a {",
			"	text-decoration: none;",
			"	&:hover {",
			"		text-decoration: none;",
			"	}",
			"}"
		],
		"description": "Cria um reset para o css"
	},

	"Centraliza item":{
		"prefix": "centraliza_vertical",
		"body": [
			"top: 50%;",
			"left: 50%",
			"",
			"transform: translate(-50%,-50%);",
		],
		"description": "Centraliza verticalmente e horizontalmente o item"
	}
}